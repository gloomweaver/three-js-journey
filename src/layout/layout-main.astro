---
import "./style.css";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <title>ThreeJS Journey Gloomweaver</title>
  </head>
  <body>
    <main>
      {
        Astro.url.pathname !== "/" && (
          <a
            class="absolute top-2 left-2 bg-white border-black border-2 rounded-full px-4 py-1"
            href="/"
          >
            Home
          </a>
        )
      }
      <slot />
    </main>
  </body>
</html>
